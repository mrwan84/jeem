print("")
print("--- Running Quick Tests ---")
print("")

// Quick sanity checks
errors = 0

// Test 1: Variables
x = 42
if (x != 42) {
    print("FAIL: Variable assignment")
    errors++
} else {
    print("PASS: Variable assignment")
}

// Test 2: Arithmetic
if (2 + 2 != 4) {
    print("FAIL: Arithmetic")
    errors++
} else {
    print("PASS: Arithmetic")
}

// Test 3: Strings
s = "hello"
if (s.len() != 5) {
    print("FAIL: String length")
    errors++
} else {
    print("PASS: String length")
}

// Test 4: Arrays
arr = [1, 2, 3]
if (arr.len() != 3) {
    print("FAIL: Array length")
    errors++
} else {
    print("PASS: Array length")
}

// Test 5: Array methods
doubled = arr.map(x => x * 2)
if (doubled[0] != 2 || doubled[1] != 4) {
    print("FAIL: Array.map")
    errors++
} else {
    print("PASS: Array.map")
}

// Test 6: Objects
obj = {a: 1, b: 2}
if (obj.a != 1) {
    print("FAIL: Object access")
    errors++
} else {
    print("PASS: Object access")
}

// Test 7: Functions
func add(a, b) { return a + b }
if (add(3, 4) != 7) {
    print("FAIL: Function call")
    errors++
} else {
    print("PASS: Function call")
}

// Test 8: Arrow functions
square = x => x * x
if (square(5) != 25) {
    print("FAIL: Arrow function")
    errors++
} else {
    print("PASS: Arrow function")
}

// Test 9: Closures
func makeAdder(n) { return x => x + n }
add5 = makeAdder(5)
if (add5(10) != 15) {
    print("FAIL: Closure")
    errors++
} else {
    print("PASS: Closure")
}

// Test 10: Filter
evens = [1,2,3,4,5].filter(x => x % 2 == 0)
if (evens.len() != 2) {
    print("FAIL: Array.filter")
    errors++
} else {
    print("PASS: Array.filter")
}

// Test 11: Reduce
sum = [1,2,3,4,5].reduce((a,b) => a + b, 0)
if (sum != 15) {
    print("FAIL: Array.reduce")
    errors++
} else {
    print("PASS: Array.reduce")
}

// Test 12: JSON
data = {name: "test", value: 42}
json = jsonStringify(data)
parsed = jsonParse(json)
if (parsed.name != "test" || parsed.value != 42) {
    print("FAIL: JSON parse/stringify")
    errors++
} else {
    print("PASS: JSON parse/stringify")
}

// Test 13: setTimeout
timerWorked = false
setTimeout(() => {
    timerWorked = true
}, 10)

// Summary
print("")
print("----------------------------------------")
total = 12
passed = total - errors
print("Results:", passed, "/", total, "tests passed")

if (errors == 0) {
    print("")
    print("[OK] All quick tests passed!")
} else {
    print("")
    print("[FAIL]", errors, "test(s) failed")
}

